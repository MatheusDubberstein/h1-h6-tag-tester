{
  "manifest_version": 3,
  "author": "Matheus Dubberstein da Silva",
  "name": "H1-H6 Tag Tester",
  "version": "1.2",
  "description": "Displays the hierarchy of H1-H6 tags on webpages, highlights them with customizable colors, adds tag name badges, and provides keyboard shortcuts.",
  "action": {
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "commands",
    "webNavigation"
  ],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Opens the popup extension"
    },
    "toggleHighlight": {
      "suggested_key": {
        "default": "Alt+Shift+H"
      },
      "description": "Active/Deactive highlight"
    }
  }
}
